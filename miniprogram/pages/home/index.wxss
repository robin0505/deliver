.container {
  padding: 30rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 用户信息栏 */
.user-info-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f9f9f9 100%);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 36rpx;
  position: relative;
  overflow: hidden;
}

.user-brief {
  display: flex;
  align-items: center;
  z-index: 1;
}

.avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 3rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.greeting {
  display: flex;
  flex-direction: column;
}

.greeting text:first-child {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 6rpx;
}

.dormitory {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-top: 4rpx;
}

.login-btn {
  background: linear-gradient(135deg, #1AAD19 0%, #39be56 100%);
  color: white;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
  box-shadow: 0 4rpx 12rpx rgba(26, 173, 25, 0.2);
}

.user-credit {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  font-size: 24rpx;
  color: #666;
  z-index: 1;
}

.user-credit-good {
  color: #1AAD19;
  font-weight: 600;
}

.user-credit-warning {
  color: #FFA500;
  font-weight: 600;
}

.user-credit-danger {
  color: #FF0000;
  font-weight: 600;
}

/* 卡片区域 */
.card-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 36rpx 30rpx;
  margin-bottom: 36rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 36rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.section-title:before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: #1AAD19;
  border-radius: 4rpx;
}

.section-more {
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.section-more:after {
  content: '>';
  margin-left: 6rpx;
  font-size: 24rpx;
}

.card-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 28rpx;
}

.card-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0;
  position: relative;
  background: #f9f9f9;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.card-item:active {
  transform: scale(0.98);
  background: #f0f0f0;
}

.card-icon {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 16rpx;
}

.card-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.points {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 20rpx;
  color: #FF6347;
  background-color: #FFF0F0;
  padding: 6rpx 12rpx;
  border-radius: 0 16rpx 0 16rpx;
  font-weight: 600;
}

/* 订单列表 */
.empty-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  line-height: 1.5;
  text-align: center;
}

.order-list {
  width: 100%;
}

.order-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  border-left: 6rpx solid #1AAD19;
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.order-platform {
  font-size: 26rpx;
  color: #666;
  background-color: #E6F7FF;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-weight: 500;
}

.order-status {
  font-size: 26rpx;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-weight: 500;
}

.status-pending {
  background-color: #FFF3E0;
  color: #FF9800;
}

.status-ongoing {
  background-color: #E8F5E9;
  color: #4CAF50;
}

.order-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-info {
  flex: 1;
}

.order-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}

.order-address {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.arrow {
  margin: 0 12rpx;
  color: #999;
}

.order-reward {
  font-size: 36rpx;
  color: #FF6347;
  font-weight: bold;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #EEEEEE;
  padding-top: 20rpx;
  margin-top: 4rpx;
}

.order-time {
  font-size: 24rpx;
  color: #888;
}

.order-actions {
  display: flex;
}

.order-actions button {
  margin-left: 16rpx;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  line-height: 1.5;
  border: none;
}

.btn-cancel {
  background-color: #EEEEEE;
  color: #666;
}

.btn-delivered {
  background-color: #1AAD19;
  color: white;
}

.btn-confirm {
  background-color: #FF6347;
  color: white;
}

/* 新手指南 */
.guide-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.guide-item {
  display: flex;
  align-items: center;
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
}

.guide-number {
  width: 48rpx;
  height: 48rpx;
  background: #1AAD19;
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.guide-desc {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  line-height: 1.5;
}

/* 用户须知 */
.notice {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 36rpx 30rpx;
  margin-bottom: 36rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.notice-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
  position: relative;
  padding-left: 20rpx;
}

.notice-title:before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: #FF6347;
  border-radius: 4rpx;
}

.notice-item {
  font-size: 28rpx;
  color: #666;
  padding: 8rpx 0;
  display: block;
  line-height: 1.5;
}

/* 底部 */
.footer {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 30rpx 0 60rpx;
}

/* 新增悬停效果 */
.card-item-hover {
  transform: scale(0.98);
  background: #f0f0f0;
}

.order-item-hover {
  background: #f9f9f9;
}

/* 订单操作按钮样式 */
.order-actions button {
  margin-left: 20rpx;
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  line-height: 1.5;
  font-weight: 500;
}

.btn-cancel {
  color: #666;
  background: #f0f0f0;
  border: 1rpx solid #ddd;
}

.btn-delivered {
  color: white;
  background: #4CAF50;
}

.btn-confirm {
  color: white;
  background: #FF9800;
}

.role-badge {
  font-size: 20rpx;
  background-color: #f0f9ff;
  color: #0078d4;
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
  margin-top: 6rpx;
  display: inline-block;
  border: 1px solid #cce7ff;
} 