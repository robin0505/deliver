.container {
  min-height: 100vh;
  background-color: #f6f6f6;
  padding-bottom: 40rpx;
}

/* 未登录状态 */
.not-login {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 30rpx;
  background-color: #fff;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.tip {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 50rpx;
}

.btn-login {
  background-color: #07c160;
  color: #fff;
  border-radius: 40rpx;
  width: 60%;
  font-size: 32rpx;
}

/* 用户信息卡片 */
.user-card {
  background-color: #fff;
  padding: 40rpx 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.info {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.credit {
  display: flex;
  align-items: center;
}

.label {
  font-size: 26rpx;
  color: #999;
  margin-right: 10rpx;
}

.value {
  font-size: 28rpx;
  color: #ff9500;
  font-weight: 500;
}

.edit-btn {
  display: flex;
  align-items: center;
}

.edit-text {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #999;
  border-right: 2rpx solid #999;
  transform: rotate(45deg);
}

/* 钱包卡片 */
.wallet-card {
  background-color: #fff;
  margin-bottom: 24rpx;
  padding: 30rpx;
}

.wallet-header {
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.wallet-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.balance {
  display: flex;
  flex-direction: column;
}

.balance-text {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.balance-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff5001;
}

.wallet-btns {
  display: flex;
}

.btn {
  min-width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
  padding: 0 30rpx;
  border-radius: 35rpx;
  background-color: #f6f6f6;
  color: #666;
}

.btn-primary {
  background-color: #07c160;
  color: #fff;
}

/* 订单部分 */
.order-section {
  background-color: #fff;
  margin-bottom: 24rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.more {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}

.grid-menu {
  display: flex;
  justify-content: space-around;
  text-align: center;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33%;
}

.icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #f0f9eb;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  position: relative;
}

.icon::before {
  font-family: "iconfont";
  font-size: 40rpx;
  color: #07c160;
}

.icon-publish::before {
  content: "\e645";
}

.icon-deliver::before {
  content: "\e649";
}

.icon-history::before {
  content: "\e64a";
}

.icon-address::before {
  content: "\e650";
}

.icon-feedback::before {
  content: "\e652";
}

.icon-service::before {
  content: "\e654";
}

.icon-about::before {
  content: "\e655";
}

.icon-test::before {
  content: "\e656";
  color: #ff9500;
}

.label {
  font-size: 28rpx;
  color: #666;
}

/* 功能列表 */
.func-list {
  background-color: #fff;
  margin-bottom: 24rpx;
}

.func-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  position: relative;
}

.func-item::after {
  content: '';
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 0;
  height: 1rpx;
  background-color: #f0f0f0;
}

.func-item:last-child::after {
  display: none;
}

.func-item .icon {
  margin-bottom: 0;
  margin-right: 20rpx;
  width: 60rpx;
  height: 60rpx;
}

.func-name {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

/* 透明按钮，用于客服按钮 */
.transparent-btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 1;
}

/* 退出登录按钮 */
.logout-btn {
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  background-color: #fff;
  color: #ff5001;
  text-align: center;
  font-size: 32rpx;
  margin: 60rpx auto 0;
} 