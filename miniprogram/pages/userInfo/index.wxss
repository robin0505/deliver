.container {
  min-height: 100vh;
  background-color: #f6f6f6;
  padding-bottom: 40rpx;
}

/* 头像区域 */
.avatar-section {
  background-color: #fff;
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 24rpx;
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
  border: 2rpx solid #eee;
}

.btn-update-avatar {
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 12rpx 40rpx;
  border-radius: 35rpx;
  line-height: 1.5;
}

/* 表单区域 */
.form-section {
  background-color: #fff;
  margin-bottom: 24rpx;
  padding: 0 30rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  padding: 30rpx 0 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.input, .picker {
  height: 80rpx;
  font-size: 30rpx;
  color: #333;
  width: 100%;
  line-height: 80rpx;
}

.picker {
  color: #333;
}

.placeholder {
  color: #999;
}

.phone-row {
  display: flex;
  align-items: center;
}

.phone-row .input {
  flex: 1;
}

.btn-verify {
  width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #07c160;
  background-color: #f0f9eb;
  margin-left: 20rpx;
  padding: 0;
  border-radius: 35rpx;
}

.textarea {
  width: 100%;
  height: 160rpx;
  font-size: 30rpx;
  color: #333;
  padding: 16rpx 0;
  line-height: 1.5;
}

.credit-score, .signup-time {
  font-size: 30rpx;
  color: #333;
  height: 80rpx;
  line-height: 80rpx;
}

.credit-score {
  color: #ff9500;
  font-weight: 500;
}

/* 保存按钮 */
.btn-area {
  margin: 60rpx 30rpx;
}

.btn-save {
  background-color: #07c160;
  color: #fff;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  border-radius: 45rpx;
} 